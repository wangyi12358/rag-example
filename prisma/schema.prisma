generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model KnowledgeChunk {
  id        BigInt                @id @default(autoincrement())
  content   String
  embedding Unsupported("vector")
  metadata  Json?
  createdAt DateTime              @default(now())

  @@map("knowledge_chunks")
}
